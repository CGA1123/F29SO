<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content">
        <span class="purple-text card-title" id="project-title"><%= @project.name %><span class="badge right"><%= @project.code %></span></span>
        <p><%= @project.description %></p>
      </div>
    </div>
  </div>

  <div class="col s4">
    <div class="card">
      <div class="card-content">
        <span class="purple-text card-title">Project Details</span>
        <p class="tooltipped details" data-position="bottom" data-delay="25" data-tooltip="Project Type"><i class="material-icons">info</i><%= @project.project_type.name %></p>
        <p><%= @project.locations.map(&:name).join(",") %></p>
      </div>
    </div>
  </div>
  <div class="col s8">
    <div class="card">
      <div class="card-content">
        <span class="purple-text card-title">Latest Announcements</span>
      </div>
    </div>
  </div>

  <div class="col s12">
    <div class="card">
      <div class="card-content">
        <span class="card-title purple-text">Roles</span>
      </div>
    </div>
  </div>
</div>
