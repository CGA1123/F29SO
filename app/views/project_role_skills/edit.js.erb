$('#skills').html("<%= j render 'project_role_skills/edit_skills', project_role_skills: @project_role_skills %>");
$('#skills-edit').html('<%= j render 'project_role_skills/edit_skills_form' %>')
$('#skills_search').autocomplete({
  source: <%= @source.html_safe %>,
  select: function(event, ui) {
    event.preventDefault();
    value = ui.item.value;
    $.ajax({
      type: "POST",
      url: "/projects/" + value.project + "/roles/" + value.role + "/skills",
      data: { skill_id: value.skill_id },
      cache: false
    });
  },
  focus: function(event, ui) {
    event.preventDefault();
  }
});
