<% content_for :page_title, 'Log In' %>
<div class="row valign-wrapper hunned-height">
  <div class="col s12 m8 offset-m2 valign">
    <div class="card z-depth-3">
      <div class="card-content center-align">
        <span class='card-title'>Login</span>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class='input-field'>
            <%= f.email_field :email, placeholder: 'Email', autofocus: true %>
          </div>
          <div class='input-field'>
          <%= f.password_field :password, placeholder: 'Password', autocomplete: "off" %>
          </div>
            <%= f.submit "Log in", class: "btn waves-effect waves-light" %> <br/><br/>
            <%= link_to "Forgotten your password?", new_user_password_path, id: 'forgotten-password' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
