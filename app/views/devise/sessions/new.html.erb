<% content_for :page_title, 'Log In' %>
<div class="gridContainer">
  <div id="LayoutDiv1">
    <table align="center" class="table" cellpadding="5px">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <tr>
          <td><h1>Login</h1></td>
        </tr>
        <tr>
          <td>
            <%= f.email_field :email, placeholder: 'Email address', class: 'textBox', autofocus: true %>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.password_field :password, placeholder: 'Password', class: 'textBox', autocomplete: "off" %>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.submit "Log in", id: 'submit' %>
          </td>
        </tr>
        <tr>
          <td>
            <%= link_to "Forgotten password?", new_user_password_path, id: 'forgotten-password' %>
          </td>
        </tr>
        <% if devise_mapping.rememberable? -%>
        <tr>
          <td>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </td>
        </tr>
        <% end -%>
      <% end %>
    </table>
  </div>
</div>
