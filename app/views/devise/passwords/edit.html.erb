<% content_for :page_title, 'Reset Password' %>
<div class="gridContainer">
  <div id="LayoutDiv1">
    <table align="center" class="table" cellpadding="5px">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>
        <%= f.hidden_field :reset_password_token %>
        <tr>
          <td><h1>Change your password</h1></td>
        </tr>
        <tr>
          <td>
            <%= f.password_field :password, placeholder: 'New password', autofocus: true, autocomplete: "off", class: 'textBox' %>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.password_field :password_confirmation, placeholder: 'Confirm new password', autocomplete: "off", class: 'textBox' %>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.submit "Submit", id: 'submit' %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
