$('#locations').html('<%= j render 'project_role_locations/locations_edit', project_role: @project_role %>');
$('#locations-edit').html('<%= j render 'project_role_locations/edit_form' %>');
$('#location_search').autocomplete({
  source: <%= @source.html_safe %>,
  select: function(event, ui) {
    value = ui.item.value
    event.preventDefault();
    $.ajax({
      type: "POST",
      url: "/projects/" + value.project + "/roles/" + value.role + "/locations",
      data: { location_id: value.id },
      cache: false
    })
    console.log(event);
  },
  focus: function(event, ui) {
    console.log('focus');
    event.preventDefault();
  }
});
