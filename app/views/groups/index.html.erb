<div class="row" style="display: table-cell;">
  <ul class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li><a href="/admin">Admin Panel</a></li>
    <li><a href="/admin/groups">Groups</a></li>
  </ul>
</div>

<div class="row">
  <h3 class="purple-text">Groups</h3>
</div>
<div class="groups row">
  <%= render @groups %>
</div>


<% if @can_manage %>
  <div class="fixed-action-btn">
    <button data-target="create-groups-modal" data-toggle='modal' class="btn-floating btn-large purple tooltipped" data-position="left" data-delay="50" data-tooltip="Create A New Group">
      <i class="large material-icons">add</i>
    </button>
  </div>

  <div id="create-groups-modal" class="modal">
    <%= render 'groups/new' %>
  </div>
<% end %>
