<% group_users.each do |user| %>
  <div class="col s6">
    <div class='group-user' id='group-user-<%= user.id %>' style="display: flex;">
      <div class="col s10">
        <%= render 'users/user', user: user.user %>
      </div>
      <div class="col s2" style="display: flex;">
        <div class="row z-depth-2" style="display: flex; justify-content: center; align-items: center;">
          <%= link_to group_users_path(name: user.group.name, id: user.id), method: :delete, remote: true do %>
          <i class="material-icons purple-text tooltipped" data-position="bottom" data-delay="50" data-tooltip="Remove User" style="margin: auto 15px;">delete</i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
