<%= form_for Location.new, url: locations_path, method: :post, remote: true do |f| %>
<div class="row" style="display: flex;">
  <div class="input-field col s3">
    <%= f.text_field :name %>
    <%= f.label :name %>
  </div>

  <div class="input-field col s6">
    <%= f.text_field :description %>
    <%= f.label :description, 'Address' %>
  </div>

  <div class="col s3" style="display: flex; justify-content: center; align-items: center;">
    <button class="btn waves-effect waves-light" style="width: 100%" type="submit" name="action">Create</button>
  </div>
</div>
<% end %>

<div class="row" style="max-height: 500px; overflow-y: auto;" id="db-locations">
  <%= render Location.all.sort_by(&:name) %>
</div>
