<div class="row no-margin" id="location-<%= location.id %>">
  <%= form_for location, url: locations_path(id: location.id), method: :patch, remote: true do |f| %>
  <div class="row no-margin" style="display: flex;">
    <div class="input-field col s3">
      <%= f.text_field :name %>
      <%= f.label :name, class: 'active' %>
    </div>

    <div class="input-field col s6">
      <%= f.text_field :description %>
      <%= f.label :description, 'Address', class: 'active' %>
    </div>

    <div class="col s2" style="display: flex; justify-content: center; align-items: center;">
      <button class="btn waves-effect waves-light" style="width: 100%" type="submit" name="action">Update</button>
    </div>

    <div class="col s1" style="display: flex; justify-content: center; align-items: center;">
      <%= link_to locations_path(id: location.id), method: :delete, remote: true do %>
        <i class="material-icons <%= location.users.any? ? 'grey-text' : 'purple-text' %>">delete</i>
      <% end %>
    </div>
  </div>
  <% end %>
</div>
