<%= form_for location, url: locations_path(id: location.id), remote: true, method: :patch do |f| %>
  <%= f.text_field :name, placeholder: 'Update Location', autofocus: 'autofocus', onfocus: "this.value = this.value;" %>
  <%= f.button do %>
    <%= octicon 'check', class: 'white' %>
  <% end %>
<% end %>
