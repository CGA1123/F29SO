<div class="row">
  <h3 class="purple-text">Project Types</h3>
</div>
<%= render @project_types%>


<% if @can_manage %>
  <div class="fixed-action-btn">
    <button data-target="create-project-type-modal" data-toggle='modal' class="btn-floating btn-large purple tooltipped" data-position="left" data-delay="50" data-tooltip="Create A New Project Type">
      <i class="large material-icons">add</i>
    </button>
  </div>

  <div id="create-project-type-modal" class="modal">
    <%= render 'project_types/new' %>
  </div>
<% end %>
